root = true

[*]
end_of_line = lf
insert_final_newline = false
charset = utf-8

[*.{ts,tsx,json,html}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{sass,scss}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[package.json]
indent_size = 2
